<style>
    .dataTables_filter {
        display: none;
    }

    .select2-container {
        margin-right: 1rem;
    }

    .dataTables_empty {
        display: none;
    }
</style>
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Cập nhật Testing</h4>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/home">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="/testing/list-testing">Quản lý Testing</a></li>
                                <li class="breadcrumb-item active">Cập nhật</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 col-sm-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin chính</h4>
                        <!-- <p class="text-muted mb-0">An example of Bootstrap Material DatePicker.</p> -->
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label class="form-label">
                                Bộ sưu tập <span class="text-danger">(*)</span>
                            </label>
                            <div class="box-order-line d-flex flex-wrap">
                                <% for(let i = 0; i < 8; i++){ %>
                                    <% 
                                        let image = false;
                                        let path  = '';

                                        if(infoTesting.images[i]){
                                            image = infoTesting.images[i];
                                            path = lodash.get(image, 'path', '');
                                        }
                                    %>
                                    <div class="box-dropzone-file dropzone-images no-file d-flex justify-content-center">
                                        <div class="box-drag-and-drop d-flex justify-content-center align-items-center p-2 <%= image && 'd-none' %>" id="boxDropzoneFile-<%= i + 1 %>" data-index="<%= i + 1 %>" name="<%= lodash.get(image, 'name', '') %>" path="<%= lodash.get(image, 'path', '') %>" size="<%= lodash.get(image, 'size', '') %>">
                                            <span> <i class="fas fa-plus"></i> </span>
                                        </div>

                                        <div class="box-preview-image <%= !image && 'd-none' %>">
                                            <img src="<%= path %>" alt="File" class="img-fluid me-3">

                                            <div class="edit-image">
                                                <a href="javascript:void(0)" class="btn-edit-image">
                                                    <i class="fas fa-tools"></i>
                                                </a>
                                                <a href="javascript:void(0)" class="btn-remove-image">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="box-processing-upload-file align-items-center justify-content-center p-2 d-none">
                                            <div class="progress">
                                                <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>

                                <% } %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                Bộ sưu tập 2 <span class="text-danger">(*)</span>
                            </label>
                            <div class="box-order-line d-flex flex-wrap">
                                <% for(let i = 10, index = 0; i < 18; i++, index++){ %>
                                    <% 
                                        let image = false;
                                        let path  = '';

                                        if(infoTesting.images2[index]){
                                            image = infoTesting.images2[index];
                                            path = lodash.get(image, 'path', '');
                                        }
                                    %>

                                    <div class="box-dropzone-file dropzone-images2 no-file d-flex justify-content-center">
                                        <div class="box-drag-and-drop d-flex justify-content-center align-items-center p-2 <%= image && 'd-none' %>" id="boxDropzoneFile-<%= i + 1 %>" data-index="<%= i + 1 %>" name="<%= lodash.get(image, 'name', '') %>" path="<%= lodash.get(image, 'path', '') %>" size="<%= lodash.get(image, 'size', '') %>">
                                            <span> <i class="fas fa-plus"></i> </span>
                                        </div>

                                        <div class="box-preview-image <%= !image && 'd-none' %>">
                                            <img src="<%= path %>" alt="File" class="img-fluid me-3">

                                            <div class="edit-image">
                                                <a href="javascript:void(0)" class="btn-edit-image">
                                                    <i class="fas fa-tools"></i>
                                                </a>
                                                <a href="javascript:void(0)" class="btn-remove-image">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="box-processing-upload-file align-items-center justify-content-center p-2 d-none">
                                            <div class="progress">
                                                <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>

                                <% } %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="testing__price">
                                Giá <span class="text-danger">(*)</span>
                            </label>
                            <input type="text" class="form-control" id="testing__price" value="<%= infoTesting.price %>" placeholder="Nhập giá">
                            <ul class="parsley-errors-list">
                                <li class="parsley-required">This value is required.</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-4">

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Hình ảnh</h4>
                        <!-- <p class="text-muted mb-0">An example of Bootstrap Material DatePicker.</p> -->
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label class="form-label" for="testing__avatar">
                                Hình ảnh <span class="text-danger">(*)</span>
                            </label>
                            <input type="file" id="testing__avatar" data-default-file="<%= lodash.get(infoTesting.avatar, 'path') %>" data-max-file-size="10M" data-height="100" />
                            <ul class="parsley-errors-list">
                                <li class="parsley-required">This value is required.</li>
                            </ul>
                        </div>

                    </div>
                </div>



            </div>

        </div>

    </div> <!-- container -->

    <div class="container-fluid container-button-bottom border-top pt-3 position-fixed">
        <div class="row">
            <div class="col-12 text-end mb-3">
                <button type="button" class="btn btn-soft-primary px-4" disabled id="btnConfirmUpdate" __testingID="<%= infoTesting._id %>">
                    Cập nhật
                </button>
                <a href="/testing/list-testing" class="btn btn-soft-danger px-4">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>